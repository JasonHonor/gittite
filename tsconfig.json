{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/tests/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "allowJS": true,
    "checkJs": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["es2022", "dom"]
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
